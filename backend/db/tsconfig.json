{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "baseUrl": "."
  },
  "include": ["db/*.ts", "*.ts"],
  "exclude": ["node_modules", "dist"]
}